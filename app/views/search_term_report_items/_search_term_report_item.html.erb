  <td><%= search_term_report_item.seven_day_total_units %></td>
  <td><%= number_to_percentage(search_term_report_item.seven_day_conversion_rate) %></td>
  <td><%= search_term_report_item.seven_day_advertised_sku_units %></td>
  <td><%= search_term_report_item.seven_day_other_sku_units %></td>
  <td><%= number_to_currency(search_term_report_item.seven_day_advertised_sku_sales/ 100) %></td>
  <td><%= number_to_currency(search_term_report_item.seven_day_other_sku_sales / 100) %></td>
